<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details" addfieldpath="/administrator/components/com_catalogue/models/fields">
		<field name="id" type="text" default="0"
			readonly="true" class="readonly"
			label="JGLOBAL_FIELD_ID_LABEL" 	description ="JGLOBAL_FIELD_ID_DESC" />
		
		<field name="supersection_name" type="text" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_TITLE_LABEL"
			description="COM_CATALOGUE_FIELD_TITLE_DESC" required="true" />
			
		<field name="alias" type="text" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_ALIAS_LABEL"
			description="COM_CATALOGUE_FIELD_ALIAS_DESC"/>
		
		<field name="supersection_sale" type="text" class="inputbox"
			size="40" label="COM_CATALOGUE_FIELD_SUPERSECTIONSALE_LABEL"
			description="COM_CATALOGUE_FIELD_SUPERSECTIONSALE_DESC"/>
			
		<field name="state" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="small"
			filter="intval" size="1" default="1"
		>
			<option value="1">
				JPUBLISHED</option>
			<option value="0">
				JUNPUBLISHED</option>
			<option value="2">
				JARCHIVED</option>
			<option value="-2">
				JTRASHED</option>
		</field>
		
		<field
			name="supersection_image"
			type="media"
			label="COM_CATALOGIE_FIELD_IMAGE_LABEL"
			description="COM_CATALOGIE_FIELD_IMAGE_DESC"
			labelclass="control-label"/>
		
		<field name="supersection_description" type="editor" class="inputbox"
			label="COM_CATALOGUE_FIELD_DESCRIPTION_LABEL" description="COM_CATALOGUE_FIELD_DESCRIPTION_DESC"
			filter="JComponentHelper::filterText" buttons="true" />
		
	</fieldset>
</form>
